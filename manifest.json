{
    "manifest_version": 3,
    "name": "Web Page Summarizer",
    "version": "1.0",
    "description": "Summarizes web pages using Gemini AI",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "http://localhost:5000/*",
        "http://127.0.0.1:5000/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
} 